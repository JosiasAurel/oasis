{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "__tests__/**/*",
    "dist/**/*",
    "jest.config.ts",
    "babel.config.js"
  ]
}
